{
    "compilerOptions": {
      "target": "es2024",
      "module": "ES2022",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  }